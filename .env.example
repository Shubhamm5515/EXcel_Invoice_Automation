# Hill Drive Invoice Automation - Environment Variables Template
# Copy this file to .env and fill in your actual values

# OCR.space API Configuration
OCR_SPACE_API_KEY=your_ocr_api_key_here
OCR_SPACE_API_URL=https://api.ocr.space/parse/image

# Gemini AI Configuration (optional)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
USE_GEMINI=false

# OpenRouter AI Configuration (recommended)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=google/gemini-2.5-flash
USE_OPENROUTER=true

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# File Upload Configuration
MAX_FILE_SIZE_MB=5
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# Template Configuration
TEMPLATE_PATH=inn sample.xlsx
OUTPUT_DIR=generated_invoices
USE_MASTER_FILE=false
MASTER_FILE_PATH=generated_invoices/all_invoices.xlsx

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Telegram Bot Storage (RECOMMENDED - Unlimited free storage!)
# Setup: See TELEGRAM_SETUP_GUIDE.md
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Google Drive Storage (Alternative - 15GB free)
# Requires google_credentials.json file
# See GOOGLE_DRIVE_SETUP.md
