# OCR.space API Configuration
OCR_SPACE_API_KEY=your_ocr_space_api_key_here
OCR_SPACE_API_URL=https://api.ocr.space/parse/image

# Gemini AI Configuration (for semantic data extraction)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
USE_GEMINI=false

# OpenRouter AI Configuration (alternative to Gemini - RECOMMENDED)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=google/gemini-2.5-flash
USE_OPENROUTER=true

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# File Upload Configuration
MAX_FILE_SIZE_MB=5
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# Template Configuration
TEMPLATE_PATH=inn sample.xlsx
OUTPUT_DIR=generated_invoices
USE_MASTER_FILE=false
MASTER_FILE_PATH=generated_invoices/all_invoices.xlsx

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# MEGA Cloud Storage Configuration (FREE 20GB storage - RECOMMENDED)
# Sign up at: https://mega.nz/register
MEGA_EMAIL=your_mega_email@example.com
MEGA_PASSWORD=your_mega_password

# Telegram Bot Storage (RECOMMENDED - Works everywhere, unlimited storage!)
# Setup: See TELEGRAM_SETUP_GUIDE.md
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
